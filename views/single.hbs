<div class="card">
    <div class="card-header">
        <h5 class="card-title">{{title}} <span class="badge badge-secondary">{{priority}}</span></h5>
    </div>
    <div class="card-body">
        {{description}}
    </div>
    <div class="card-footer">{{date}}</div>
</div>
<form action="/todo/{{id}}?_method=DELETE" method="post">
    <a href="/todo/{{id}}/edit" type="button" class="btn btn-warning" id="edit-todo">Edit todo</a>
    <button type="submit" class="btn btn-default btn-danger" id="delete-todo">Delete todo</button>
</form>